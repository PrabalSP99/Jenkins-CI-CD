pipeline{
    agent any
    stages{

          stage('Build'){
            agent {
                docker {
                    image 'node:22.13.1-alpine3.21'
                    reuseNode true // reuse the node for the next stage 
                }
            }
            steps{
                sh '''
                    ls -l
                    node --version
                    npm install
                    npm run build
                '''
            }
          }
        }
}
