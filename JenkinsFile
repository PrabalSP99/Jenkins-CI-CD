pipeline {
    agent any
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:22.14.0-alpine3.21'
                    args '-u root:root'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -l
                    node --version
                '''
            }
        }
    }
}
